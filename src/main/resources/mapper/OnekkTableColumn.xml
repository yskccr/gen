<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onekk.gen.mapper.OnekkTableColumnMapper">
    <resultMap  id="BaseResultMap" type="com.onekk.gen.dto.OnekkTableColumn">
        <result property="columnName"  column="columnName" />
        <result property="dataType"  column="dataType" />
        <result property="columnComment"  column="columnComment" />
        <result property="columnKey"  column="columnKey" />
    </resultMap>
    <select id="quireColumn" parameterType="String" resultMap="BaseResultMap">
        select
        column_name columnName, data_type dataType, column_comment columnComment, column_key columnKey,
        extra from information_schema.columns
 		where table_name = #{tableName} and table_schema = (select database()) order by ordinal_position
    </select>


</mapper>